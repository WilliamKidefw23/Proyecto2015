<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.william.kid.EducaNotas">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_proyecto"
        android:label="@string/app_name"
        android:theme="@style/Theme.Proyecto">

        <activity
            android:name="apps.william.kid.EducaNotas.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ConNavigationDrawer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="apps.william.kid.EducaNotas.LoginActivity"
            android:label="@string/titulo_activity_login">
        </activity>

        <activity
            android:name="apps.william.kid.EducaNotas.ListadoUsuarioActivity"
            android:label="@string/titulo_activity_listado_alumno">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="apps.william.kid.EducaNotas.MainActivity" />
        </activity>

        <activity
            android:name="apps.william.kid.EducaNotas.CrudUsuarioActivity"
            android:label="@string/titulo_activity_crud_usuario">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="apps.william.kid.EducaNotas.ListadoUsuarioActivity" />
        </activity>

        <activity
            android:name="apps.william.kid.EducaNotas.RegitrarNotasActivity"
            android:label="@string/titulo_activity_registrar_notas" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="apps.william.kid.EducaNotas.MainActivity" />
        </activity>

        <activity
            android:name="apps.william.kid.EducaNotas.ConsolidadoNotasActivity"
            android:label="@string/titulo_activity_consolodidado_notas" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="apps.william.kid.EducaNotas.RegitrarNotasActivity" />
        </activity>

        <activity
            android:name="apps.william.kid.EducaNotas.ResultadoAlumnosActivity"
            android:label="@string/titulo_activity_listado_alumnos" />

        <activity
            android:name="apps.william.kid.EducaNotas.ExportarNotasActivity"
            android:label="@string/titulo_activity_exportar_notas" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="apps.william.kid.EducaNotas.MainActivity" />
        </activity>

        <activity android:name="apps.william.kid.EducaNotas.CrudAlumnoActivity"
            android:label="@string/titulo_activity_crud_alumno">

        </activity>

        <activity android:name="apps.william.kid.EducaNotas.ListadoAlumnoCursoActivity"
            android:label="@string/titulo_activity_listado_alumno_cursos">

        </activity>

        <activity
            android:name="apps.william.kid.EducaNotas.ImportarNotasActivity"
            android:label="@string/titulo_activity_importar_notas" />

    </application>

</manifest>